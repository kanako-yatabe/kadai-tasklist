<div>
  <h1>ログイン</h1>
</div>

<div>
  <div>

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div>
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email%>
      </div>

      <div>
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password %>
      </div>

      <%= f.submit 'ログイン'%>
    <% end %>

    <%= link_to 'ユーザ登録', signup_path %>
  </div>
</div>
